project:
  out_dir: "raporlar"
  logs_dir: "loglar"
  run_mode: "range"
  holding_period: 1
  transaction_cost: 0.0
  stop_on_filter_error: false

data:
  excel_dir: "data"
  enable_cache: false
  cache_parquet_path: "cache"

calendar:
  tplus1_mode: "calendar"
  holiday_csv: ""

benchmark:
  source: "none"       # none | excel | csv
  excel_path: ""       # source=excel ise: data/BIST.xlsx
  excel_sheet: "BIST"  # 1. sheet adı
  csv_path: ""         # source=csv ise yol
  column_date: "date"  # tarih kolonu
  column_close: "close"# kapanış kolonu

report:
  with_bist_ratio_summary: true
  include_hit_ratio: true
  excel_engine: "xlsxwriter"

filters:
  module: "io_filters"
  include: ["*"]

range:
  start_date: "2022-01-03"
  end_date:   "2025-04-18"

single:
  date: "2025-03-07"

